<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <script src="{{ asset('Tooltiper/tooltiper.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('Tooltiper/tooltiper.css') }}">
    <link rel="stylesheet" href="{{ asset('style/css/base.css') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
    <section class="login">
        <div class="leftSection">
            <img src="/images/low-poly-mill-removebg-preview.png" alt="rr">
        </div>
        <main>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="container">
                <div class="content">
                    <h1>Le Moulin de Pont Du Vent</h1>
                    <h3 class="h3 mb-3 font-weight-normal">Connectez-vous</h3>
                    <div class="inputs">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                </div>
            </div>
            <div class="btns">
                <button class="button" type="submit">Sign in</button>
                <a href="{{ path('app_register') }}" class="signup"> Créer un compte </a>
            </div>
        </form>
        </main>
    </section>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelector('main').classList.add('loaded'); // for opacity body animation on load
        });
    </script>
</body>
</html>

