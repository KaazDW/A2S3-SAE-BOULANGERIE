<form hx-post="{{ path('ajouterIngredient', {'idProduit': produit.id}) }}" hx-target="this" hx-swap="outerHTML">
{% set prodIngredientIds = produit.Ingredients|map(i => i.ingredient.id) %}
<div display="flex">
    <select name="ingredient">
        {% for ingredient in ingredients %}
            {% if ingredient.id not in prodIngredientIds %}
                <option value="{{ingredient.id}}">{{ ingredient.nom }}</option>
            {% endif %}
        {% endfor %}
    </select>
    <label for="cars">Quantit√© (en grammes):</label>
    <input type="number" name="quantite" value="50" min="1">
</div>

<button class="btn btn-success" type="submit">Valider</button>

</form>