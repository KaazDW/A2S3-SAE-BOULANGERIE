<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="{{ asset('Tooltiper/tooltiper.js') }}"></script>
        <link rel="stylesheet" href="{{ asset('Tooltiper/tooltiper.css') }}">
        <link rel="stylesheet" href="{{ asset('style/css/base.css') }}">
        <script src="https://kit.fontawesome.com/98657ff299.js" crossorigin="anonymous"></script>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
{#            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
            <script src="{{ asset('js/bibliotheques/htmx/htmx.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <div class="nav">
                <a href="{{ path('accueil') }}" class="accueil tooltip-container" data-tooltip="Retourner à l'accueil">
                    <div class="title">
                        <img src="/images/logo_moulin.png" alt="Logo MDPDV">
                        <h3>Le Moulin du Pont des Vents</h3>
                    </div>
                </a>
                <ul class="link">
                    <li>
                        <a href="{{ path('admin') }}">Admin</a>
                    </li>
                    <li>
                        <a href="{{ path('produits') }}">Produits</a>
                    </li>
                    <li>
                        <a href="{{ path('app_facture') }}">Factures</a>
                    </li>
                    <li class="tooltip-style-modal-container">
                        <a class="redround" ><i id="alertButton" style="padding: 5px;" class="fa-solid fa-bell"></i></a>
                        <div class="tooltip-style-modal" id="alertModal">
                            {{ render(controller(
                                'App\\Controller\\IngredientController::stockAlert'
                            )) }}
                        </div>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}" class="tooltip-container" data-tooltip="Se déconnecter"><i class="fa-solid fa-right-from-bracket"></i></a>
                    </li>
                </ul>
            </div>
        </header>
        <main>
            {% block body %}
            {% endblock %}

            {% block javascripts %}
            {% endblock %}
        </main>
        <script>

            alertButton = document.getElementById('alertButton');
            alertModal = document.getElementById('alertModal');
            document.addEventListener('click', function (event) {
                if (event.target == alertButton) {
                    if(alertModal.style.display == 'block'){
                        alertModal.style.display = 'none';
                    } else {
                        alertModal.style.display = 'block';
                    }
                    return;
                }
                if (alertModal.contains(event.target)) {
                    return;
                }
                alertModal.style.display = 'none';
            });
        </script>

    </body>

</html>